{
  "compilerOptions": {
    "target": "ES2020",                          
    "module": "commonjs",                        
    "moduleResolution": "node",
    "rootDir": "./src",                          
    "outDir": "./dist",                          
    "strict": true,
    "allowJs": false,                              
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,                    
    "forceConsistentCasingInFileNames": true,    
    "skipLibCheck": true                         
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}